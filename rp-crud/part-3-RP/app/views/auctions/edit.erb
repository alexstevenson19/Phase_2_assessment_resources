<div class="container">
  <h1>Edit Auction Details</h1>

  <form method="POST" action="/auctions/<%= @auction.id %>">
    <input type="hidden" name="_method" value="PUT">
    <label for="auction[name]">Name</label>
    <input type="text" name="auction[name]" value="<%= @auction.name %>" placeholder="<%= @auction.name %>"><br><br>

    <label for="condition">Condition:</lable>
    <select name="auction[condition]">
      <option value="new">New</option>
      <option value="good">Good</option>
      <option value="fair">Fair</option>
      <option value="poor">Poor</option>
      <option value="gomi">Gomi</option>
    </select><br><br>

    <label for="starts_at">Starts At:</label><br>
    <input id="starts_at" name="auction[starts_at]" type="text" value="<%= @auction.try(:starts_at) %>" placeholder="<%= @auction.starts_at %>"><br><br>

    <label for="ends_at">Ends At:</label><br>
    <input id="ends_at" name="auction[ends_at]" type="text" value="<%= @auction.try(:ends_at) %>" placeholder="<%= @auction.ends_at %>"><br><br>

    <label for="auction[description]">Description</label>
    <input type="text" name="auction[description]" value="<%= @auction.description %>" placeholder="<%= @auction.description %>"><br>

    <input type="submit" value="Update Auction">
  </form>
</div>
